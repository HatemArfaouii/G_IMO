{% extends 'base.html.twig' %}
 {% block title 'Se connecter' %}
     {% block body %}
         <div class="container mt-4">

             {% if error %}
                 <div class="alert alert-danger">
                     {{ error.messagekey | trans(error.messagedata, 'security') }}
                 </div>
             {% endif %}

             <form action="{{ path('login') }}" method="post"
                   style="width: 50%; margin-left: auto;margin-right: auto;">
                 <div class="form-group">
                     <label for="username">Nom d'utilisateur</label>
                     <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}">
                 </div>

                 <div class="form-group">
                     <label for="password">Mot de Passe</label>
                     <input type="password" id="password" name="_password" class="form-control">
                 </div>
                 <button class="btn btn-common log-btn btn-danger" data-dismiss="modal" type="reset">
                     <i class="fa fa-lg fa-close"></i>
                     Annuler
                 </button>
                 <button type="submit" name="login" class="btn btn-common log-btn btn-primary">
                     <i class="fa fa-sign-in" aria-hidden="true"></i> Connexion
                 </button>
             </form>
         </div>
     {% endblock %}
 